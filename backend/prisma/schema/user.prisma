model User {
  id               Int               @id @default(autoincrement())
  email            String            @unique
  name             String?
  password         String
  otp              String?
  otpPurpose       OtpPurpose?
  cryptoPortfolios CryptoPortfolio[]
  bankManager      BankManager[]

  expenseCategories ExpenseCategory[]
  expenses          Expense[]
}

enum OtpPurpose {
  VERIFY_ACCOUNT
  RESET_PASSWORD
}
